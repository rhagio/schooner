usage()
# Purpose: describe usage of this script
# Args:    none
# Returns: 0 success
{
cat << EOF
NAME
       sch-tbak-rollback -  Remove temp backup directory: part of a set of 
       scripts to create and manage a temporary backup directory which can
       be used to make editing of several files reasonably atomic.    

SYNOPSIS
       sch-tbak-rollback [FILE]...
       
EXIT STATUS
       0      if OK
       1      if failed       
             
USAGE
       sch-tbak-mkdir "$(TmpDir)"     # rollback the temp dir
  
EOF 
}

	# iterate through files
rm -rf "$1"

if [ "$?" = 0 ]; then
	exit 0
else
	echo "unable to rollback temp directory $TmpDir"; exit 1
fi