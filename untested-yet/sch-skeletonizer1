	--exclude '.mozilla/firefox/urmsktfc.default/*.bak' \
	--exclude '.mozilla/firefox/urmsktfc.default/extensions.sqlite' \
	--exclude '.mozilla/firefox/urmsktfc.default/*.log' \
	--exclude '.mozilla/firefox/urmsktfc.default/weave/logs/*' \
